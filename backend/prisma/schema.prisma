generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Session {
    id        String   @id
    sid       String   @unique
    data      String
    expiresAt DateTime
    scores    Score[]
}

model Image {
    id      String @id @default(uuid())
    name    String
    url     String
    riddle1 Json
    riddle2 Json
    riddle3 Json
    riddle4 Json
    riddle5 Json
    riddle6 Json
    riddle7 Json
}

model Score {
    scoreId          String   @id @default(uuid())
    scoreTs          DateTime
    session          Session  @relation(fields: [sessionId], references: [id])
    sessionId        String
    gamerTag         String
    busyBeachTime    Float
    interscetionTime Float
    fleaMarketTime   Float
    totalTime        Float
    score            Float
}
