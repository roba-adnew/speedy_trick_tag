generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Session {
    id        String   @id
    sid       String   @unique
    data      String
    expiresAt DateTime
}

model Image {
    id             String  @id @default(uuid())
    name           String
    url            String
    riddle1        String
    riddle1Answer  String
    riddle1Targets Json
    riddle2        String
    riddle2Answer  String
    riddle2Targets Json
    riddle3        String
    riddle3Answer  String
    riddle3Targets Json
    riddle4        String
    riddle4Answer  String
    riddle4Targets Json
    riddle5        String
    riddle5Answer  String
    riddle5Targets Json
    riddle6        String
    riddle6Answer  String
    riddle6Targets Json
    riddle7        String
    riddle7Answer  String
    riddle7Targets Json
    Scoreboard     Score[]
}

model Score {
    userId      String   @id @default(uuid())
    userName    String
    image       Image    @relation(fields: [imageId], references: [id])
    imageId     String
    startTime   DateTime
    timeSeconds Float
    score       Float
}
